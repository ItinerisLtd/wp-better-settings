namespace WPBS\WPBetterSettings\partials;

/* @var \ArrayObject $context Context passed through from Settings class. */

$type = $type ?? 'text';

$name = sprintf(
	'%s[%s]',
	esc_html( $context->option_name ),
	esc_html( $context->id )
);

$desc_id = $context->id . '-description';

?>

<input
		name="<?php echo esc_attr( $name ); ?>"
		type="<?php echo esc_attr( $type ) ?>"
		id="<?php echo esc_attr( $context->id ) ?>"
		value="<?php echo esc_attr( $context->value ); ?>"
		class="regular-text"
	<?php disabled( $context->disabled ); ?>
	<?php if ( ! empty( $context->desc ) ) { ?>
		aria-describedby="<?php echo esc_attr( $desc_id ) ?>"
	<?php } ?>
>

<?php if ( ! empty( $context->desc ) ) { ?>
	<p class="description" id="<?php echo esc_attr( $desc_id ) ?>">
		<?php echo wp_kses_post( $context->desc ); ?>
	</p>
<?php } ?>
